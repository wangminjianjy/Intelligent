<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingLeft="@dimen/view_margin_10"
    android:paddingRight="@dimen/view_margin_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/report_avg_tem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/view_margin_10"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/report_avg_SD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/view_margin_10"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/report_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/view_margin_10"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

    <include layout="@layout/view_divider_line" />
</LinearLayout>