<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.ControlFragment">

    <include layout="@layout/toolbar_custom" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/control_bg"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_margin_10"
                android:background="@drawable/shape_text"
                android:orientation="vertical"
                android:padding="@dimen/view_margin_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="实时参数"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_20" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/view_margin_20"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="22sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="平均参数:"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_size_15" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4">

                                <TextView
                                    android:id="@+id/param_wendu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:paddingLeft="@dimen/view_margin_10"
                                    android:text="0.0"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="22sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:padding="@dimen/view_margin_5"
                                    android:text="℃"
                                    android:textColor="@color/colorWhite" />

                                <TextView
                                    android:id="@+id/param_rh"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:paddingLeft="@dimen/view_margin_10"
                                    android:text="0.0"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="22sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:padding="@dimen/view_margin_5"
                                    android:text="%RH"
                                    android:textColor="@color/colorWhite" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/view_margin_15"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="right"
                                android:text="甲        醛:"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_size_15" />

                            <TextView
                                android:id="@+id/param_jiaquan"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:paddingLeft="@dimen/view_margin_10"
                                android:text="0.0"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_size_15" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="苯:"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_size_15" />

                            <TextView
                                android:id="@+id/param_ben"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:paddingLeft="@dimen/view_margin_10"
                                android:text="0.0"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_size_15" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/view_margin_15"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="right"
                                android:text="PM 2.5:"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_size_15" />

                            <TextView
                                android:id="@+id/param_pm"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:paddingLeft="@dimen/view_margin_10"
                                android:text="0.0"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_size_15" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="CO₂:"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_size_15" />

                            <TextView
                                android:id="@+id/param_co"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:paddingLeft="@dimen/view_margin_10"
                                android:text="0.0"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_size_15" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/control_storage"
                            android:layout_width="@dimen/view_height_50"
                            android:layout_height="@dimen/view_height_50"
                            android:layout_gravity="right|top"
                            android:layout_margin="@dimen/view_margin_10"
                            android:background="@drawable/shape_text_circle"
                            android:gravity="center"
                            android:text="库房\n列表"
                            android:textSize="@dimen/text_size_15" />

                        <ImageView
                            android:id="@+id/control_alert"
                            android:layout_width="@dimen/view_height_50"
                            android:layout_height="@dimen/view_height_50"
                            android:layout_gravity="right|bottom"
                            android:layout_margin="@dimen/view_margin_10"
                            android:src="@drawable/control_alert"
                            android:visibility="gone" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_margin_10"
                android:background="@drawable/shape_text"
                android:visibility="gone">

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>